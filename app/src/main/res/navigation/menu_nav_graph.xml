<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_nav_graph"
    app:startDestination="@id/mealFragment">

    <fragment
        android:id="@+id/schoolFragment"
        android:name="com.example.mealgo.ui.school.SchoolFragment"
        android:label="학교 검색"
        tools:layout="@layout/fragment_school" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mealgo.ui.profile.ProfileFragment"
        android:label="내 정보"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_schoolFragment"
            app:destination="@id/schoolFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealFragment"
        android:name="com.example.mealgo.ui.meal.MealFragment"
        android:label="급식"
        tools:layout="@layout/fragment_meal" >
        <action
            android:id="@+id/action_mealFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
</navigation>